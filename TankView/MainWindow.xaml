<Window x:Class="TankView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankView"
        xmlns:rsrc="clr-namespace:TankView.ViewResources"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <rsrc:RsrcRecentLocations x:Key="RecentLocations"/>
        <rsrc:RsrcNGDPPatchHosts x:Key="NGDPPatchHosts"/>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="0">
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="Open...">
                        <MenuItem Header="NGDP"></MenuItem>
                        <MenuItem Header="CASC"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="Recent..." ItemsSource="{StaticResource RecentLocations}"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Header="Exit" Click="Exit"></MenuItem>
                </MenuItem>
                <MenuItem Header="NGDP">
                    <MenuItem Header="Patch Host" ItemsSource="{StaticResource NGDPPatchHosts}"></MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
